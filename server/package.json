{
  "name": "near-rest-api",
  "version": "1.0.0",
  "description": "Near rest Api",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "server:watch": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node .",
    "prebuild": "npm run lint",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint src --cache --fix --ext .ts"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "coverageDirectory": "target/coverage",
    "coverageReporters": [
      "cobertura"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testTimeout": 50000,
    "setupFiles": [
      "./tests/dotenv-config.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/hard-stone/near-node-js.git"
  },
  "author": "Olesya Mileshko",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/hard-stone/near-node-js/issues"
  },
  "homepage": "https://gitlab.com/hard-stone/near-node-js#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "jest-junit": "^13.2.0",
    "supertest": "^6.2.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.3",
    "near-api-js": "^0.44.2",
    "ts-jest": "^28.0.3",
    "uuid": "^8.3.2"
  }
}
