{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": false,
    "lib": [
      "ES2020"
    ],
    "removeComments": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
